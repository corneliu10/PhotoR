@{

    ViewBag.Title = "User list";
}

<ol class="breadcrumb">
    <li><h3>@ViewBag.Title</h3></li>
</ol>

@foreach (var user in ViewBag.UsersList)
{
    <div class="panel-heading">Username: @user.UserName</div>

    <div class="panel-body">

        <i class="glyphicon glyphicon-envelope"></i> E-mail: <span class="label label-default">@user.Email</span>

        <br /><br />

        @if (@user.PhoneNumber != null)
        {
            <i class="glyphicon glyphicon-phone"></i>@:Phone number:<span class="label label-default">@user.PhoneNumber</span>


        }

    </div>

    <div class="panel-footer">

        <a class="btn btn-sm btn-success" href="/Users/Show/@user.Id"> View user</a>

    </div>

    <br /><br />
}
