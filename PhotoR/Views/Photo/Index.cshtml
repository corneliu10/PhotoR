@model PhotoR.Models.Photo
@{
    ViewBag.Title = "All photos";
}

<h2>@ViewBag.Title</h2>
<br />

@if (TempData.ContainsKey("message"))
{
    <h3 class="alert alert-info" role="alert">@ViewBag.message</h3>
}

@using (Html.BeginForm("Search", "Photo"))
{
    @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.Description)
    <br />
    <br />
    <button type="submit" class="btn btn-success">Search</button>
    <a class="btn btn-success" href="/Photo/Index">All photos</a>
}

<br />
<hr />
<br />

<br />
<a class="btn btn-info" href="/Photo/New">Add new photo</a>
<br />
<br />
<hr/>

@foreach (var photo in ViewBag.Photos)
{
    @Html.Label("Photo name")
    <p>@photo.FileName</p>
    <div>
        <img src="~/Assets/@photo.FileName" alt="Photo unavailable" width="100px" height="100px" />
    </div>
    <br/>
    <a class="btn btn-success" href="/Photo/Show/@photo.Id">Show photo</a>
    <a class="btn btn-success" href="/Photo/Edit/@photo.Id">Edit photo</a>
    <br />
    <hr />
    <br />
}



<br />

